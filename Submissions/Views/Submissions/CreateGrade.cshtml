@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Submissions.ViewModels.GradeViewModel

<head>
    <link rel="stylesheet" href="../../Styles/styles.css"/>
</head>

<div class="h-100 d-flex align-items-center justify-content-center">
  <div class="card w-50" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">Grade @Model.student.Name's submission for "@Model.assignment.Name"</h5>
    <h6 class="card-subtitle mb-2 text-muted">Max grade: @Model.assignment.MaxGrade</h6>
<form asp-action="Create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <input asp-for="Grade" class="form-control" style="width: 250px;"/>
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" asp-route-id="@Model.SubmissionId" class="btn btn-primary" /> <a asp-controller="Submissions" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
</form>
  </div>
</div>
</div>
    </tr>
  </thead>
  <tbody>
     @{int j = 1;}
      @foreach (var item in this.Model.laboratorySubmissions)
      {
            <tr>
              <td>@j</td>
              <td>@item.Item1.FilePath</td>
              <td>@item.Item1.Status</td>
              <td>@item.Item2.Name</td>
              <td>@item.Item3.Name</td>
              <td>@item.Item1.TurnedInDate</td>
              <td>@item.Item4.Name</td>
            </tr>
           j++;
      }
  </tbody>
</table>


<script type='text/javascript'>
$(document).ready( function () {
    $('.table').DataTable();
} );
</script>
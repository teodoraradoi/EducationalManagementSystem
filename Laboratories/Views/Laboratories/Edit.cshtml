@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Laboratories.ViewModels.CreateViewModel

<head>
    <link rel="stylesheet" href="../../Styles/styles.css"/>
</head>

@{
    ViewData["Title"] = "Edit";
}

<div class="h-100 d-flex align-items-center justify-content-center">
  <div class="card" style="width: 40rem;">
  <div class="card-body">
    <h5 class="card-title">Edit Laboratory</h5>
        <hr />


<form asp-action="Edit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            @Html.HiddenFor(model => model.Laboratory.CourseId)


            <div class="form-group">
                <label asp-for="Laboratory.Name" class="control-label"></label>
                <input asp-for="Laboratory.Name" class="form-control" />
                <span asp-validation-for="Laboratory.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Laboratory.Day" class="control-label"></label>
                   <select class="form-control" aria-label="Day" asp-for="Laboratory.Day">
                      <option selected>Please select the day</option>
                      <option value="1">Monday</option>
                      <option value="2">Tuesday</option>
                      <option value="3">Wednesday</option>
                      <option value="4">Thursday</option>
                       <option value="5">Friday</option>
                  </select>
               <span asp-validation-for="Laboratory.Day" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Laboratory.Time" class="control-label"></label>
                <input asp-for="Laboratory.Time" class="form-control" />
                <span asp-validation-for="Laboratory.Time" class="text-danger"></span>
            </div>


            @*
                  <select asp-for="Laboratory.CourseId" 
            asp-items="@(new SelectList(Model.Courses, "Id", "Name"))">
        <option>Please select one</option>
    </select>
*@

            <div class="form-group">
                <label asp-for="Laboratory.SubgroupId" class="control-label">Subgroup</label>
               <select class="custom-select" asp-for="Laboratory.SubgroupId" asp-items="@(new SelectList(Model.Subgroups, "Id", "Name"))">
                    <option>Select subgroup...</option>
               </select>
               <span asp-validation-for="Laboratory.SubgroupId" class="text-danger"></span>
            </div>


                <div class="form-group">
                    <label asp-for="Laboratory.TeacherId" class="control-label">Teacher</label>
                   <select class="custom-select" asp-for="Laboratory.TeacherId" asp-items="@(new SelectList(Model.Teachers, "Id", "Name"))">
                        <option>Select teacher...</option>
                   </select>
                   <span asp-validation-for="Laboratory.TeacherId" class="text-danger"></span>
            </div>


            

            <div class="form-group">
                <input type="submit" name="Edit" value="Edit" asp-route-id="@Model.Laboratory.Id" class="btn btn-primary" /> <a asp-controller="Default" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
</form>
   
  </div>
</div>
</div>
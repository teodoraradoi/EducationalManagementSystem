@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Laboratories.Data.Entities.Laboratory
<h3>@Html.DisplayFor(model => model.Name)</h3>


@{
    ViewData["Title"] = "Details";
}

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Laboratories" asp-action="Edit" asp-route-id="@Model.Id">@Html.DisplayFor(model => model.Name)</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Day)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Day)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
    </dl>

    @if(ViewContext.HttpContext.User.IsInRole("Teacher")) {
              
              <a asp-controller="Course" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-dark">View Course</a>


              <a asp-controller="Assignments" asp-action="Create" asp-route-id="@Model.Id" class="btn btn-dark">Create assignment</a>
          }

   <a asp-controller="Laboratories" asp-action="Index" class="btn btn-secondary">Back</a>


   <h2>Posts</h2>
   <h2>Assignments</h2>
  
</div>
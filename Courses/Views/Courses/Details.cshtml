@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Courses.Data.Entities.Course


<h3>@Html.DisplayFor(model => model.Name)</h3>


@{
    ViewData["Title"] = "Details";
}

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Semester)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Semester)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Day)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Day)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
    </dl>


          @if(ViewContext.HttpContext.User.IsInRole("Teacher")) {
              
              <a asp-controller="Laboratories" asp-action="Create" asp-route-id="@Model.Id" class="btn btn-dark">Create laboratory</a>
              <a asp-controller="Laboratories" asp-action="AttachedLaboratories" asp-route-id="@Model.Id" class="btn btn-dark">View laboratories for this course</a>
              <a asp-controller="Assignments" asp-action="Create" asp-route-id="@Model.Id" class="btn btn-dark">Create assignment</a>
              <a asp-controller="Posts" asp-action="Create" asp-route-id="@Model.Id" class="btn btn-dark">Create a post</a>
          }

   <a asp-controller="Courses" asp-action="Index" class="btn btn-secondary">Back</a>


   <h2>Posts</h2>
   <h2>Assignments</h2>
  
</div>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Day</th>
      <th scope="col">Time</th>
      <th scope="col">Year</th>
      <th scope="col">Semester</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
     @{int i = 1;}
      @foreach (var course in this.Model)
      {
            <tr>
              <td>@i</td>
              <td>@course.Name</td>
              <td>@course.Day</td>
              <td>@course.Time</td>
              <td>@course.Year</td>
              <td>@course.Semester</td>
              <td> <a asp-controller="Courses" asp-action="Edit" asp-route-id="@course.Id" class="btn btn-dark">Edit</a>
               <a asp-controller="Courses" asp-action="Delete" asp-route-Id="@course.Id" class="btn btn-dark">Delete</a>
               <a asp-controller="Assignments" asp-action="Create" asp-route-id="@course.Id" class="btn btn-dark">Create assignment</a></td>
            </tr>
            i++;
      }
  </tbody>
</table>
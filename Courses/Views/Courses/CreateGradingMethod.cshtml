@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Courses.ViewModels.GradingMethodViewModel

<head>
    <link rel="stylesheet" href="../../Styles/styles.css"/>
</head>

<div class="h-100 d-flex align-items-center justify-content-center">
  <div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">Create grading method for @ViewBag.CourseName</h5>

    
<form asp-action="Create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FinalExamPercent" class="control-label">Final Exam Percent</label>
                <input asp-for="FinalExamPercent" class="form-control" />
                <span asp-validation-for="FinalExamPercent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LaboratoryPercent" class="control-label">Laboratory Percent</label>
                <input asp-for="LaboratoryPercent" class="form-control" />
                <span asp-validation-for="LaboratoryPercent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AttendanceMatters" class="control-label">Does attendance matter?</label>
                <input asp-for="AttendanceMatters" class="form-control" />
                <span asp-validation-for="AttendanceMatters" class="text-danger"></span>
            </div>

            
            <div class="form-group">
                <input type="submit" value="Save" asp-route-id="@Model.id" class="btn btn-primary" /> <a asp-controller="Default" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
</form>


  </div>
</div>
</div>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Teachers.ViewModels.DetailsViewModel

<head>
    <link rel="stylesheet" href="../../Styles/styles.css"/>
</head>

<h3>Are you sure you want to delete this?</h3>

@{
    ViewData["Title"] = "Delete";
}

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.teacher.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.teacher.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.user.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.user.Email)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Delete" asp-route-id="@Model.teacher.Id" class="btn btn-danger" /> <a asp-controller="Default" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
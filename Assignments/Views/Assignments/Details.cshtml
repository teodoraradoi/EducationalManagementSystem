@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Assignments.Data.Entities.Assignment

<head>
    <link rel="stylesheet" href="../../Styles/styles.css"/>
</head>

@{
    ViewData["Title"] = "Details";
}

<div class="h-100 d-flex align-items-center justify-content-center">
  <div class="card" style="width: 40rem;">
  <div class="card-body">
    <h5 class="card-title">@Html.DisplayFor(model => model.Name)</h5>



<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Description)
        </dd> 
        <dt class="col-sm-3">
            Due Date
        </dt>
        <dd class="col-sm-9">
            @Convert.ToDateTime(Model.DueDate).ToString("dd/MM/yyyy hh:mm")
        </dd>
        <dt class="col-sm-3">
            Max Grade
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.MaxGrade)
        </dd>
    </dl>

   
              
              <a asp-controller="Submissions" asp-action="Create" asp-route-id="@Model.Id" class="btn btn-primary">Submit your work</a>



   <a asp-controller="Default" asp-action="Index" class="btn btn-secondary">Back</a>
  
</div>

  </div>
</div>
</div>
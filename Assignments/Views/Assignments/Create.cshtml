@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Assignments.Data.Entities.Assignment

<head>
    <link rel="stylesheet" href="../../Styles/styles.css"/>
</head>


@{
    ViewData["Title"] = "Create";
}

<div class="h-100 d-flex align-items-center justify-content-center">
  <div class="card" style="width: 35rem;">
  <div class="card-body">
    <h5 class="card-title">Create Assignment</h5>
   <hr />



<form asp-action="Create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

           
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

                        <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                 <textarea asp-for="Description" class="form-control" rows="5" cols="40"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="DueDate" class="control-label">Due Date</label>
                <input asp-for="DueDate" class="form-control" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>
            
                         <div class="form-group">
                <label asp-for="MaxGrade" class="control-label">Max Grade</label>
                <input asp-for="MaxGrade" class="form-control" />
                <span asp-validation-for="MaxGrade" class="text-danger"></span>
            </div>

            

            <div class="form-group">
                <input type="submit" name="Create" value="Create" asp-route-id="@Model.SubjectId" class="btn btn-primary" /> <a asp-controller="Default" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
</form>
     </div>
</div>
</div>
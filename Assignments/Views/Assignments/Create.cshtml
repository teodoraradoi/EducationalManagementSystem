@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Assignments.Data.Entities.Assignment

@{
    ViewData["Title"] = "Create";
}

<h1>Create an assignment</h1>



<form asp-action="Create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            
            @Html.HiddenFor(model => model.SubjectId)
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

                        <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="DueDate" class="control-label"></label>
                <input asp-for="DueDate" class="form-control" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>
            
                         <div class="form-group">
                <label asp-for="MaxGrade" class="control-label"></label>
                <input asp-for="MaxGrade" class="form-control" />
                <span asp-validation-for="MaxGrade" class="text-danger"></span>
            </div>

            

            <div class="form-group">
                <input type="submit" name="Create" value="Create" class="btn btn-success" /> <a asp-controller="Default" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
</form>
   
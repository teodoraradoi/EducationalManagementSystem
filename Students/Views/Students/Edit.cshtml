@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Students.ViewModels.StudentAccountViewModel

@{
    ViewData["Title"] = "Edit";
}

<head>
    <script
      src="https://code.jquery.com/jquery-3.6.0.min.js"
      integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
      crossorigin="anonymous"></script>
</head>

<h1>Edit account</h1>

 <div class="col-md-4">
        <form  asp-action="Edit" enctype="multipart/form-data" method="post">

            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

             <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
       
             <div class="input-box">
                <label class="label-text">Group</label>
                <div class="form-group">
                <select id="groupDropdown" asp-for="GroupId" asp-items="@(new SelectList(ViewBag.Groups, "Id", "Name"))">
                    <option value="">Select group...</option>
                 </select>
                 <span asp-validation-for="GroupId" class="text-danger"></span>
                </div>
             </div>

    
        <div class="input-box">
            <label class="label-text">Subgroup</label>
            <div class="form-group">
                <select id="subgroupDropdown" asp-for="SubgroupId" class="form-control">
                    <option value="">Select subgroup...</option>
                </select>
                <span asp-validation-for="SubgroupId" class="text-danger"></span>
            </div>
        </div>

            <input type="submit" name="Edit" value="Edit" asp-route-id="@Model.Id" class="btn btn-success" /> <a asp-controller="Default" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>

    

    <script>

        
        
        $(document).ready(function () {

            if($("#groupDropdown").val() != null) {
                var groupId = $("#groupDropdown").val();
                console.log(groupId);
                
        $.getJSON("/Students/GetSubgroupsList", { Id: groupId }, function (data) {
            var item = "";
            $("#subgroupDropdown").find('option').not(':first').remove();
            //$("#subgroupDropdown").find('option').not(':first').remove();
            //item += '<option value="">Select subgroup...</option>'
            $.each(data, function (i, subgroup) {
                console.log(subgroup)
                let id =  subgroup.id;
                let name = subgroup.name;
                item += '<option value="' + id + '">' + name + '</option>'
                console.log(item)
            });
            console.log(item);
            $("#subgroupDropdown").html(item);
        });
            }
        




    $("#groupDropdown").change(function () {
        var groupId = $(this).val();
        console.log(groupId);

        $.getJSON("/Students/GetSubgroupsList", { Id: groupId }, function (data) {
            var item = "";
            $("#subgroupDropdown").find('option').not(':first').remove();
            //$("#subgroupDropdown").find('option').not(':first').remove();
            item += '<option value="">Select subgroup...</option>'
            $.each(data, function (i, subgroup) {
                console.log(subgroup)
                let id =  subgroup.id;
                let name = subgroup.name;
                item += '<option value="' + id + '">' + name + '</option>'
                console.log(item)
            });
            console.log(item);
            $("#subgroupDropdown").html(item);
        });

    });
});


</script>
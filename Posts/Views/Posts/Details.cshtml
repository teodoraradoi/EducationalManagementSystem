@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Posts.Data.Entities.Post

<head>
    <link rel="stylesheet" href="../../Styles/styles.css"/>
</head>

@{
    ViewData["Title"] = "Details";
}

<div class="h-100 d-flex align-items-center justify-content-center">
  <div class="card" style="width: 55rem;">
  <div class="card-body">
    <h5 class="card-title">@Html.DisplayFor(model => model.Name)</h5>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
               @if(ViewContext.HttpContext.User.IsInRole("Teacher")) {
                <a asp-controller="Posts" asp-action="Edit" asp-route-id="@Model.Id">@Html.DisplayFor(model => model.Name)</a>
              
          }

          @if(ViewContext.HttpContext.User.IsInRole("Student")) {
                @Html.DisplayFor(model => model.Name)            
          }
            
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Date Created
        </dt>
        <dd class="col-sm-10">
            @Convert.ToDateTime(Model.DateCreated).ToString("dd/MM/yyyy hh:mm")
        </dd>
    </dl>

    <a asp-controller="Posts" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-controller="Posts" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-primary">Delete</a>
  
</div>
  </div>
</div>
</div>
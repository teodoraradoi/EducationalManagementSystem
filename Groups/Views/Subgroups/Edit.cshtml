@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Groups.ViewModels.CreateViewModel


@{
    ViewData["Title"] = "Edit";
}

<h1>Edit subgroup</h1>


<form asp-action="Edit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Subgroup.Name" class="control-label"></label>
                <input asp-for="Subgroup.Name" class="form-control" />
                <span asp-validation-for="Subgroup.Name" class="text-danger"></span>
            </div>


                <select asp-for="Subgroup.GroupId" 
            asp-items="@(new SelectList(Model.Groups, "Id", "Name"))">
        <option>Please select one</option>
    </select>
            
            <div class="form-group">
                <input type="submit" name="Edit" value="Edit" asp-route-id="@Model.Subgroup.Id" class="btn btn-success" /> <a asp-controller="Subgroup" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
</form>